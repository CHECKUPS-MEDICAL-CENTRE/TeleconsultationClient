    <script>
        $(document).ready(function () {
            $('#isChecked').click(function () {
                $("#SubTelecon").toggle(this.checked);
            });
        });
        $('#SubTelecon').click(function (e) {
            var url = '/Consultation/BookAppointment'; 
            var postObj = {
                "FirstName": $('#first_name').val(),
